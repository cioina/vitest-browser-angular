{
  "name": "vitest-browser-angular",
  "version": "0.3.0",
  "description": "Render Angular components in VItest Browser Mode",
  "author": "Shai Reznik (HiRez.io)",
  "license": "MIT",
  "homepage": "https://github.com/vitest-community/vitest-browser-angular#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitest-community/vitest-browser-angular.git"
  },
  "bugs": {
    "url": "https://github.com/vitest-community/vitest-browser-angular/issues"
  },
  "keywords": [
    "angular",
    "vitest",
    "browser",
    "testing"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./setup-zones": {
      "types": "./dist/setup-zones.d.mts",
      "default": "./dist/setup-zones.mjs"
    },
    "./setup-zoneless": {
      "types": "./dist/setup-zoneless.d.mts",
      "default": "./dist/setup-zoneless.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "*.d.ts",
    "*.mjs",
    "dist"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsdown",
    "change": "changeset",
    "dev": "tsdown --watch --sourcemap",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "fmt.staged": "pretty-quick --staged",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "release": "changeset publish",
    "release.pkg-pr-new": "pnpm dlx pkg-pr-new publish",
    "test": "vitest"
  },
  "peerDependencies": {
    "@angular/core": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@vitest/browser": "^2.1.0 || ^3.0.0 || ^4.0.0-0",
    "vitest": "^2.1.0 || ^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.3.0",
    "@analogjs/vitest-angular": "^2.3.0",
    "@angular/build": "^21.1.4",
    "@angular/common": "^21.1.5",
    "@angular/compiler": "^21.1.5",
    "@angular/compiler-cli": "^21.1.5",
    "@angular/core": "^21.1.5",
    "@angular-devkit/architect": "^0.2101.4",
    "@angular/platform-browser": "^21.1.5",
    "@angular/router": "^21.1.5",
    "@angular-devkit/schematics": "^21.2.0",
    "@changesets/cli": "^2.29.8",
    "@changesets/get-github-info": "^0.7.0",
    "@changesets/types": "^6.1.0",
    "@eslint/js": "^9.39.2",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "bumpp": "^10.4.1",
    "changelogithub": "^14.0.0",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "pkg-pr-new": "^0.0.63",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "pretty-quick": "^4.2.2",
    "rxjs": "^7.8.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.3",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zone.js": "~0.16.0",
    "zx": "^8.8.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm fmt.staged && pnpm lint"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  }
}
