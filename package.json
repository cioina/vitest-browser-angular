{
  "name": "vitest-browser-angular",
  "version": "0.0.2",
  "description": "Mount Angular components in VItest Browser Mode",
  "author": "Shai Reznik (HiRez.io)",
  "license": "MIT",
  "homepage": "https://github.com/hirezio/vitest-browser-angular#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirezio/vitest-browser-angular.git"
  },
  "bugs": {
    "url": "https://github.com/hirezio/vitest-browser-angular/issues"
  },
  "keywords": [
    "angular",
    "vitest",
    "browser",
    "testing"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./setup-zones": {
      "types": "./dist/setup-zones.d.ts",
      "default": "./dist/setup-zones.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "*.d.ts",
    "*.mjs",
    "dist"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsdown",
    "change": "changeset",
    "dev": "tsdown --watch --sourcemap",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "fmt.staged": "pretty-quick --staged",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "release": "changeset publish",
    "release.pkg-pr-new": "pnpm dlx pkg-pr-new publish",
    "test": "vitest"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^1.21.2",
    "@analogjs/vite-plugin-angular": "^1.21.2",
    "@angular-devkit/architect": "^0.2003.5",
    "@angular/compiler": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/platform-browser": "^20.3.4",
    "@angular/router": "^20.3.4",
    "@angular/common": "^20.3.4",
    "@changesets/cli": "^2.29.7",
    "@changesets/get-github-info": "^0.6.0",
    "@changesets/types": "^6.1.0",
    "@eslint/js": "^9.37.0",
    "@vitest/browser": "^3.2.4",
    "bumpp": "^10.3.1",
    "changelogithub": "^13.16.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "playwright": "^1.56.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rxjs": "^7.8.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.6",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4",
    "zone.js": "^0.15.1",
    "zx": "^8.8.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm fmt.staged && pnpm lint"
  }
}
